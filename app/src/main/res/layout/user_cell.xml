<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/res_cellcard"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_white_rounded_rect">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:id="@+id/fullnameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name:"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/res_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Full Name"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/fullnameTitle"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/fullnameTitle"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/emailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address:"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/res_title"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/res_cuisine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/res_title"
                    android:layout_toEndOf="@+id/emailTitle"
                    android:layout_marginTop="5dp"
                    android:text="User Email Address"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/emailTitle" />

                <TextView
                    android:id="@+id/passwordTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password:"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/res_cuisine"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/res_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/res_cuisine"
                    android:layout_toEndOf="@+id/passwordTitle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="User Password"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/passwordTitle" />

                <ImageButton
                    android:id="@+id/deleteUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/res_location"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/trash"
                    android:padding="5dp"
                    tools:ignore="ContentDescription" />


            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>